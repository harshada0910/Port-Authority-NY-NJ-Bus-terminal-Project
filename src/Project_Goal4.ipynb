import pandas as pd
import os
import re

# === Folder Paths ===
# These paths point to the traffic files, the toll file, and the final output location.
traffic_dir = "/Users/jay/Desktop/Port Authority Project 2_Tunnels and Bridges/Final Dataset/Traffic_By_Facility"
toll_file = "/Users/jay/Desktop/Port Authority Project 2_Tunnels and Bridges/Port_Authority_Toll_Rates_Pivoted_2025.csv"
output_file = "/Users/jay/Desktop/Goal4_Traffic_Toll_Joined_Full_2013_2025.csv"

# === Step 1: Load all traffic CSVs ===
# List of all facility traffic files that will be combined.
facility_files = [
    "Bayonne_traffic.csv",
    "GWB_Lower_traffic.csv",
    "GWB_PIP_traffic.csv",
    "GWB_Upper_traffic.csv",
    "Goethals_traffic.csv",
    "Holland_traffic.csv",
    "Lincoln_traffic.csv",
    "Outerbridge_traffic.csv"
]

traffic_dfs = []
for file in facility_files:
    path = os.path.join(traffic_dir, file)
    df = pd.read_csv(path)

    # Normalize column names to a consistent format.
    df.columns = df.columns.str.strip().str.replace(" ", "_")

    # Add facility name explicitly for clarity.
    df["Facility_Name"] = file.replace("_traffic.csv", "").strip().title()
    traffic_dfs.append(df)

# Combine all traffic datasets from the eight facilities.
traffic_all = pd.concat(traffic_dfs, ignore_index=True)
print(f"Combined {len(facility_files)} facilities | Total rows: {len(traffic_all)}")

# === Step 2: Prepare traffic columns ===
# Convert dates, and extract useful components such as month, day name, and year.
traffic_all["DATE"] = pd.to_datetime(traffic_all["DATE"], errors="coerce")
traffic_all["Month"] = traffic_all["DATE"].dt.month
traffic_all["Day_Name"] = traffic_all["DATE"].dt.day_name()
traffic_all["Year"] = traffic_all["DATE"].dt.year

# === Step 3: Load toll dataset ===
tolls = pd.read_csv(toll_file)
tolls.columns = tolls.columns.str.strip().str.replace(" ", "_")

# Fix known facility name typo and make formatting consistent.
tolls["Facility"] = tolls["Facility"].str.strip().str.title().replace({"Geothals": "Goethals"})

# === Step 4: Clean dollar signs and commas in toll columns ===
price_cols = [col for col in tolls.columns if col not in ["Facility", "Year"]]
for col in price_cols:
    tolls[col] = (
        tolls[col]
        .astype(str)
        .apply(lambda x: re.sub(r"[^0-9.\-]", "", x))  # Keep only numbers and decimals.
        .replace("", None)
        .astype(float)
    )

# === Step 5: Keep only 2025 tolls ===
# These toll rates will be merged with all traffic years.
tolls_2025 = tolls[tolls["Year"] == 2025].copy()

# === Step 6: Clean facility names in traffic for join ===
traffic_all["Facility_Name"] = traffic_all["Facility_Name"].str.strip().str.title()
traffic_all["Facility_Name"] = traffic_all["Facility_Name"].replace({"Geothals": "Goethals"})

# === Step 7: Merge traffic (2013–2025) with tolls (2025 only) ===
merged = pd.merge(
    traffic_all,
    tolls_2025,
    left_on="Facility_Name",
    right_on="Facility",
    how="left"
)

# === Step 8: Select relevant columns for dashboard ===
keep_columns = [
    "DATE", "Year", "Month", "Day_Name", "Facility_Name",
    "TOTAL", "Autos", "Small_T", "Large_T", "Buses",
    "Autos_Mid_Tier_EZPass", "Large_Trucks_Mid_Tier_EZPass", "Small_Trucks_Mid_Tier_EZPass",
    "Autos_Off_Peak_EZPass", "Buses_Off_Peak_EZPass", "Large_Trucks_Off_Peak_EZPass", "Small_Trucks_Off_Peak_EZPass",
    "Autos_Peak_EZPass", "Buses_Peak_EZPass", "Large_Trucks_Peak_EZPass", "Small_Trucks_Peak_EZPass",
    "Autos_Tolls_by_Mail_All_Hours", "Buses_Tolls_by_Mail_All_Hours",
    "Large_Trucks_Tolls_by_Mail_All_Hours", "Small_Trucks_Tolls_by_Mail_All_Hours",
    "Autos_Truck_Overnight", "Buses_Truck_Overnight",
    "Large_Trucks_Truck_Overnight", "Small_Trucks_Truck_Overnight"
]

final_cols = [col for col in keep_columns if col in merged.columns]
dashboard_df = merged[final_cols].copy()

# === Step 9: Extract Year from DATE again to ensure accuracy ===
dashboard_df.loc[:, "Year"] = pd.to_datetime(dashboard_df["DATE"], errors="coerce").dt.year

# === Step 10: Save final file ===
os.makedirs(os.path.dirname(output_file), exist_ok=True)
dashboard_df.to_csv(output_file, index=False)

print("Final dataset (2013–2025 + 2025 tolls) saved successfully.")
print(f"Path: {output_file}")
print(f"Columns count: {len(dashboard_df.columns)}")
print(f"Rows: {len(dashboard_df)}")
print(f"Years range: {int(dashboard_df['Year'].min())} – {int(dashboard_df['Year'].max())}")
print(f"Sample Toll Columns: {', '.join([c for c in dashboard_df.columns if 'EZPass' in c or 'Mail' in c][:6])}")
